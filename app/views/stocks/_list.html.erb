<div class="row">
  <div class="col-8">
<table class="table">
  <thead>
    <tr >
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
    <tr>
      <th scope="row"><%= stock.ticker %></th>
      <td ><%= stock.name%></td>
      <td><%= stock.last_price%></td>
      <td><% if current_user.id  == @user.id %> <%= link_to 'remove',user_stock_path(stock), method: :delete, data: {confirm:"are you sure want to delete"}  %>
       <% else %>
       Follow
       <% end %>
      </td>
    </tr>
     <% end %>
  </tbody>
</table>
